{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "@mate-academy/eslint-config",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": ["react", "react-hooks", "@typescript-eslint"],
    "rules": {
        "react-hooks/exhaustive-deps": "error",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
